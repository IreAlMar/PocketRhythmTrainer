<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irene.pocketrhythmtrainer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TempoSettings"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayTempo"
            android:label="@string/title_activity_play_tempo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EndOfExercise"
            android:label="@string/title_activity_end_of_exercise"/>
    </application>

</manifest>