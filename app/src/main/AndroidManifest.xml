<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irene.pocketrhythmtrainer">

    <application
        android:name=".Trainer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayTempoActivity"
            android:label="@string/title_activity_play_tempo" />
        <activity
            android:name=".TempoSettingsActivity"
            android:label="@string/title_activity_tempo_settings" />
        <activity
            android:name=".SaveRoundActivity"
            android:label="@string/title_activity_save_round"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".ShowScoresActivity"
            android:label="@string/title_activity_show_scores" />
    </application>

</manifest>